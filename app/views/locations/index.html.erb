<div class="container">
<div class="row">
<div class="col-md-10 col-md-offset-1">
<br><br>
<br><br>
<br><br>
<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table class="table ">
  <thead>
    <tr>
     <th>Name</th>
      <th>Start / End </th>
      <th>Comments</th>
      <th>Address</th>
      <th>Url</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.start_date %> - <%= location.end_date %></td>
        <td><%= location.comments %></td>
        <td><%= location.address %></td>
        <td><%= location.url %></td>
        <td><center><i><%= best_in_place location, :active, :type => :checkbox, :nil => "?" %></i></center></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
</div>
</div>
</div>
