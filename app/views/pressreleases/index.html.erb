<div class="container">
<div class="row">
<div class="col-md-10 col-md-offset-1">
<br><br>
<br><br>
<br><br>
<p id="notice"><%= notice %></p>

<h1>Press Releases</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Filename</th>
      <th>Content type</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pressreleases.each do |pressrelease| %>
      <tr>
        <td><%= pressrelease.created_at %></td>
        <td><%= pressrelease.filename %></td>
        <td><%= pressrelease.content_type %></td>
        
        <td><%= link_to 'Show', pressrelease %></td>
        <td><%= link_to 'Edit', edit_pressrelease_path(pressrelease) %></td>
        <td><%= link_to 'Destroy', pressrelease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Press Release', new_pressrelease_path %>
</div>
</div>
</div>

