<div class="container">
<div class="row">
<div class="col-md-10 col-md-offset-1">
<br><br>
<br><br>
<br><br>
<p id="notice"><%= notice %></p>

<h1>Headlines</h1>

<table>
  <thead>
    <tr>
      <th>Leadtext</th>
       <th>Link URL</th>
      <th>Display?</th>
       <th>Created</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @headlines.each do |headline| %>
      <tr>
        <td><%= headline.leadtext %></td>
        <td><%= headline.url %></td>
       <td><center><i><%= best_in_place headline, :display, :type => :checkbox, :nil => "?" %></i></center></td>
        <td><%= headline.created_at %></td>
        <td><%= link_to 'Show', headline %></td>
        <td><%= link_to 'Edit', edit_headline_path(headline) %></td>
        <td><%= link_to 'Destroy', headline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Headline', new_headline_path %>
</div>
</div>
</div>
